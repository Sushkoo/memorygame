<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="450" Width="450" ResizeMode="NoResize">

    <Window.Background>
        <ImageBrush />
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Name="TimeLabel" Text="Idő: 0 s" FontSize="16" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" Margin="10"/>
            <TextBlock Name="MovesLabel" Text="Lépések: 0" FontSize="16" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" Margin="10"/>
        </StackPanel>

        <UniformGrid Name="CardGrid" Grid.Row="1" Columns="4" Rows="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" />

        <Button Name="NewGameButton" Content="Új játék" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="10" FontSize="18" FontWeight="Bold" Background="#4CAF50" Foreground="White" BorderBrush="Transparent" Padding="10,5" Click="NewGameButton_Click"/>
    </Grid>
</Window>
